/* miniprogram/pages/indexProduct/indexProduct.wxss */
.swiper {
  height: 100vw
}
.swiper-item{
  position: relative;
  width: 750rpx;
  height: 750rpx
}
.swiper-item image {
  width: 100%;
  height: 100%;
}
.product-name {
  background-image: linear-gradient(to right, #ca5aed 20%, #8e0cca 100%);
  padding: 20rpx;
  color: #fff;
  font-size: 28rpx;
}
.like-icon {
  position: absolute;
  top: 876rpx;
  right: 50rpx;
}
.card {
      box-shadow: 0 1px 6px rgba(0,0,0,.2);
      width: 690rpx;
      margin: 20rpx auto;
      color: #5a5a5a;
      font-size: 28rpx;
      box-sizing: border-box;
      padding: 20rpx;
      line-height:2em;

}
.sale-price {
  color: red;
  font-size: 30rpx;
}
.old-price {
  text-decoration: line-through;
  margin-left: 10rpx;
  font-size: 24rpx;
}
.key {
  font-weight: bold
}